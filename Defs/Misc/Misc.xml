<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>TyphonInvisibility</defName>
    <label>Typhon Invisibility</label>
    <description>Psychically-induced invisibility. This actually affects others nearby, making their brains unable to perceive the sight of this individual, even if the eyes are unaffected.</description>
    <isBad>false</isBad>
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <li Class="HediffCompProperties">
        <compClass>HediffComp_Invisibility</compClass>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath"/>
    </comps>
  </HediffDef>

  <ThingCategoryDef>
    <defName>CorpsesTyphon</defName>
    <label>Typhon corpses</label>
    <parent>CorpsesAnimal</parent>
  </ThingCategoryDef>

  <FleshTypeDef>
    <defName>Typhon</defName>
    <corpseCategory>CorpsesTyphon</corpseCategory>
    <damageEffecter>Damage_HitTyphon</damageEffecter>
    <genericWounds>
      <li>
        <texture>Things/Pawn/Wounds/WoundA</texture>
        <color>0.1,0.1,0.1</color>
      </li>
      <li>
        <texture>Things/Pawn/Wounds/WoundB</texture>
        <color>0.1,0.1,0.1</color>
      </li>
      <li>
        <texture>Things/Pawn/Wounds/WoundC</texture>
        <color>0.1,0.1,0.1</color>
      </li>
    </genericWounds>
  </FleshTypeDef>

  <EffecterDef>
    <defName>Damage_HitTyphon</defName>
    <children>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.4</positionRadius>
        <fleckDef>AirPuff</fleckDef>
        <burstCount>4~5</burstCount>
        <speed>0.4~0.8</speed>
        <scale>1.0~1.3</scale>
        <color>(25,25,25)</color>
        <spawnLocType>OnSource</spawnLocType>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.1</positionRadius>
        <fleckDef>BloodSplash</fleckDef>
        <burstCount>2~3</burstCount>
        <scale>1.6~2.1</scale>
        <color>(25,25,25)</color>
        <spawnLocType>OnSource</spawnLocType>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.0</positionRadius>
        <fleckDef>BodyImpact</fleckDef>
        <burstCount>1</burstCount>
        <scale>0.55</scale>
        <color>(25,25,25, 60)</color>
        <spawnLocType>OnSource</spawnLocType>
      </li>
    </children>
    <offsetTowardsTarget>0.25~0.25</offsetTowardsTarget>
    <positionRadius>0.1</positionRadius>
  </EffecterDef>

  <FactionDef Name="TyphonFaction" ParentName="FactionBase">
    <defName>Typhon</defName>
    <label>typhon</label>
    <description></description>
    <pawnSingular>typhon</pawnSingular>
    <pawnsPlural>typhon</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>Typhon</fixedName>
    <factionIconPath>World/WorldObjects/Expanding/Insects</factionIconPath>
    <colorSpectrum>
      <li>(0.2,0.2,0.2)</li>
      <li>(0.5,0.5,0.5)</li>
    </colorSpectrum>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 0)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <humanlikeFaction>false</humanlikeFaction>
    <hidden>true</hidden>
    <autoFlee>false</autoFlee>
    <canUseAvoidGrid>false</canUseAvoidGrid>
    <techLevel>Animal</techLevel>
    <permanentEnemyToEveryoneExcept>
      <li>Typhon_Hidden</li>
    </permanentEnemyToEveryoneExcept>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <allowedArrivalTemperatureRange>-45~45</allowedArrivalTemperatureRange>
    <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>90</configurationListOrderPriority>
  </FactionDef>

  <FactionDef ParentName="TyphonFaction">
    <defName>Typhon_Hidden</defName>
    <fixedName>Typhon Hidden</fixedName>
    <permanentEnemyToEveryoneExcept>
      <li>Typhon</li>
      <li>PlayerColony</li>
      <li>PlayerTribe</li>
    </permanentEnemyToEveryoneExcept>
    <permanentEnemy>false</permanentEnemy>
  </FactionDef>
</Defs>
